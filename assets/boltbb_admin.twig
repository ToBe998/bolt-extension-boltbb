{# Page: NavSecondary > Extensions > BoltBB #}

{% extends "_base/_page-nav.twig" %}

{% block page_nav 'Extensions' %}

{% block page_title %}
{{ __('BoltBB') }}{% if boltbb %} â€” {{ boltbb.title }}{% endif %}
{% endblock page_title %}

{% block page_subtitle %}
{% if boltbb %}{{ boltbb.description }}{% endif %}
{% endblock page_subtitle %}

{% block page_main %}

    <div class="row boltbb-bolt-container">
        <div class="col-md-9">

            {% include '_sub/_messages.twig' %}

            <section class="forums-container">
                <h3>{{ __('Forums') }}</h3>
                <div class="forums-list">
                    <table class="dashboardlisting table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>{{ __('Forum') }}</th>
                                <th>{{ __('Description') }}</th>
                                <th>{{ __('State') }}</th>
                                <th align="center">{{ __('Topics') }}</th>
                                <th align="center">{{ __('Replies') }}</th>
                            </tr>
                        </thead>
                        <tbody class="forums-list-items">
                        {% for forum in forums %}
                            <tr>
                                <td>
                                    <label>
                                        <input type="checkbox"
                                               id="form_forums_{{ loop.index0 }}"
                                               name="form[forums][]"
                                               value="{{ forum.name }}">
                                    </label>
                                </td>
                                <td>{{ forum.name }}</td>
                                <td>{{ forum.description }}</td>
                                <td>{{ forum.state }}</td>
                                <td align="center">{{ forum.topics }}</td>
                                <td align="center">{{ forum.replies }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
            <hr />
        </div>

        <aside class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-cog fa-fw"></i>Admin Options</div>
                <div class="panel-body">

                    {% if missing %}
                        <div class="btn-group">
                            <a class="btn btn-tertiary" data-action="boltbb-forum-repair">
                                <i class="fa fa-wrench"></i> {{ __('Repair Forum') }}
                            </a>
                        </div>
                    {% endif %}

                        <h4><strong>{{ __('Forum Maintenance') }}</strong></h4>
                        <div class="btn-group">
                            <a class="btn btn-tertiary" data-action="boltbb-forum-open">
                                <i class="fa fa-refresh"></i> {{ __('Open Selected Forums') }}
                            </a>
                        </div>

                        <div class="btn-group">
                            <a class="btn btn-tertiary" data-action="boltbb-forum-close">
                                <i class="fa fa-refresh"></i> {{ __('Close Selected Forums') }}
                            </a>
                        </div>
                </div>
            </div>
        </aside>

    </div>

    <script>
        //var site = '{{site}}';
        var baseurl = "{{paths.bolt}}extensions/boltbb";

        var active_console;
        var active_interval;

        jQuery(document).ready(function($) {
            var boltExt = new BoltBBAdmin();
            boltExt.setMessage('repair', '{{__('Repairing forums database table...')}}' );
            boltExt.setMessage('open',   '{{__('Opening selected forums...')}}');
            boltExt.setMessage('close',  '{{__('Closing selected forums...')}}');
        });
    </script>

{% endblock page_main %}
